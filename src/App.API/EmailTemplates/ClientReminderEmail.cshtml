@model App.Application.DTOs.ReminderEmailModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Appointment Confirmation</title>
    <style>
        body {
            font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
        }

        .container {
            background-color: #ffffff;
            margin: 50px auto;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            text-align: center;
        }

        h2 {
            color: #333333;
            font-size: 28px;
            margin-bottom: 20px;
        }

        p {
            color: #666666;
            font-size: 16px;
            line-height: 1.6;
        }

        .highlight {
            color: #4CAF50;
            font-weight: bold;
        }

        .footer {
            margin-top: 30px;
            font-size: 14px;
            color: #999999;
        }

        .button {
            display: inline-block;
            padding: 12px 24px;
            font-size: 16px;
            color: #ffffff;
            background-color: #4CAF50;
            border-radius: 6px;
            text-decoration: none;
            margin: 20px 10px;
            transition: background-color 0.3s ease;
        }

            .button:hover {
                background-color: #45A049;
            }

        .contact-info {
            margin: 20px 0;
        }

            .contact-info p {
                margin: 5px 0;
            }

        .map-button {
            margin-top: 20px;
        }

        .button-icon {
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .button-icon img {
                margin-right: 8px;
            }

        .social-icons {
            margin-top: 20px;
        }

            .social-icons a {
                display: inline-block;
                margin: 0 10px;
            }

            .social-icons img {
                width: 24px;
                height: 24px;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Appointment reminder for <span class="highlight">@Model.ReservationDate.ToString("MMMM dd, yyyy")</span> at <span class="highlight">@Model.ReservationDate.ToString("hh:mm tt")</span></h2>
        <p>Dear <span class="highlight">@Model.ClientName</span>,</p>
        <p>This is a 1 hour remind of your confirmed appointment <span class="highlight">@Model.ReservationDate.ToString("MMMM dd, yyyy")</span> at <span class="highlight">@Model.ReservationDate.ToString("hh:mm tt")</span> at our Studio. If you have any questions, please get in touch with us at:</p>
        <div class="contact-info">
            <p class="highlight">@Model.PhoneNumber</p>
            <p class="highlight">@Model.Address</p>
        </div>
        <p>Thank you for choosing us, and we can’t wait to see you soon!</p>
        <p>Best regards,</p>
        <p><strong>@Model.ProviderName</strong></p>
        <a href="tel:@Model.PhoneNumber" class="button button-icon"><img src="https://img.icons8.com/ios-filled/24/ffffff/phone.png" alt="Phone Icon" /> Call Us</a>
        <a href="https://www.google.com/maps/dir/?api=1&origin=current+location&destination=@Model.Latitude.ToString("F8", System.Globalization.CultureInfo.InvariantCulture),@Model.Longitude.ToString("F8", System.Globalization.CultureInfo.InvariantCulture)" class="button button-icon map-button" target="_blank"><img src="https://img.icons8.com/ios-filled/24/ffffff/map-pin.png" alt="Map Icon" /> Get Directions</a>
        <div class="social-icons">
            <a href="@Model.Facebook" target="_blank"><img src="https://img.icons8.com/ios-filled/24/ffffff/facebook-new.png" alt="Facebook Icon" /></a>
            <a href="@Model.TikTok" target="_blank"><img src="https://img.icons8.com/ios-filled/24/ffffff/tiktok.png" alt="TikTok Icon" /></a>
            <a href="@Model.Instagram" target="_blank"><img src="https://img.icons8.com/ios-filled/24/ffffff/instagram-new.png" alt="Instagram Icon" /></a>
        </div>
        <div class="footer">
            <p>If you have any questions, please contact us at the information provided above.</p>
        </div>
    </div>
</body>
</html>
